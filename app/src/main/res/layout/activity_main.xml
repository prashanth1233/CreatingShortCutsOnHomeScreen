<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prasanth.creatingshortcutsapps.activities.MainActivity">

    <Button
        android:id="@+id/createShortcutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Create Shortcut" />

    <Button
        android:id="@+id/navigateTonextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createShortcutBtn"
        android:layout_centerInParent="true"
        android:text="Second Intent" />

</RelativeLayout>
